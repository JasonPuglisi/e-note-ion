{
  "templates": {
    "calendar": {
      "schedule": {
        "cron": "0 */4 * * *",
        "hold": 3600,
        "timeout": 1800
      },
      "priority": 4,
      "private": true,
      "truncation": "ellipsis",
      "integration": "trakt",
      "integration_fn": "get_variables_calendar",
      "templates": [
        {
          "format": [
            "[V] NEXT AIRING",
            "{show_name}",
            "{episode_ref} {air_day} {air_time}"
          ]
        }
      ]
    },
    "watching": {
      "schedule": {
        "cron": "*/3 * * * *",
        "hold": 180,
        "timeout": 120,
        "refresh_interval": 30
      },
      "priority": 7,
      "private": true,
      "truncation": "ellipsis",
      "integration": "trakt",
      "integration_fn": "get_variables_watching",
      "templates": [
        {
          "format": [
            "{status_line}",
            "{show_name}",
            "{episode_ref} {episode_title}"
          ]
        }
      ]
    }
  }
}
