{
  "templates": {
    "now_playing": {
      "webhook": true,
      "schedule": {
        "hold": 14400,
        "timeout": 30
      },
      "priority": 8,
      "private": true,
      "truncation": "ellipsis",
      "integration": "plex",
      "templates": [
        {
          "format": [
            "[G] NOW PLAYING",
            "{show_name}",
            "{episode_line}"
          ]
        }
      ]
    },
    "paused": {
      "webhook": true,
      "schedule": {
        "hold": 14400,
        "timeout": 30
      },
      "priority": 8,
      "private": true,
      "truncation": "ellipsis",
      "integration": "plex",
      "templates": [
        {
          "format": [
            "[Y] NOW PLAYING",
            "{show_name}",
            "{episode_line}"
          ]
        }
      ]
    },
    "stopped": {
      "webhook": true,
      "schedule": {
        "hold": 60,
        "timeout": 30
      },
      "priority": 8,
      "private": true,
      "truncation": "hard",
      "integration": "plex",
      "templates": [
        {
          "format": [
            "[R] NOW PLAYING"
          ]
        }
      ]
    }
  }
}
